{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "browser": true,
    "node": false,
    "es6": true
  },
  "ignorePatterns": ["node_modules/", ".*/**/*"],
  "rules": {
    "prettier/prettier": "error"
  }
}

